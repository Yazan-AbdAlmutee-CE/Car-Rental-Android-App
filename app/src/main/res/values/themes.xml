<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/paypal_blue</item>
        <item name="colorOnError">@android:color/holo_red_light</item>
        <item name="colorAccent">@color/paypal_yellow</item>

    </style>

    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/paypal_blue</item>
        <item name="colorPrimaryDark">@color/paypal_blue</item>
        <item name="colorAccent">@color/paypal_yellow</item>

        <item name="android:statusBarColor">@android:color/transparent</item> <!-- Transparent status bar -->
        <item name="android:windowLightStatusBar">true</item>


        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>
        <item name="colorOnSecondaryContainer">@color/paypal_blue</item>
        <item name="itemShapeFillColor">@color/paypal_blue</item>
        <item name="colorSecondaryContainer">#B3E5FC</item>x
        <item name="android:windowTranslucentStatus">false</item>

    </style>

    <style name="Theme.FinalProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FinalProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FinalProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/rubik_light</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextAppearance.App.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/rubik_light</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/paypal_blue</item>
        <item name="itemTextColor">@color/paypal_yellow</item>
        <item name="itemShapeFillColor">@color/paypal_blue</item>
    </style>
    <style name="MenuTitle">
        <item name="android:textSize">18sp</item> <!-- Change the text size as needed -->
        <item name="android:textColor">#B3E5FC</item> <!-- Change the color as needed -->
    </style>
    <style name="CustomActivityTheme" parent="Theme.FinalProject">
        <item name="android:statusBarColor">@color/paypal_blue</item>
    </style>
</resources>